<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>bonita-integration-as-tests</artifactId>
		<groupId>org.bonitasoft.engine</groupId>
		<version>6.4.0-SNAPSHOT</version>
	</parent>

	<artifactId>bonita-deploy-ear3</artifactId>
	<packaging>ear</packaging>

	<name>Bonita Deploy: EAR-EJB3</name>

	<dependencies>
		<dependency>
			<groupId>org.bonitasoft.engine</groupId>
			<artifactId>bonita-deploy-ejb3</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>org.bonitasoft.engine</groupId>
			<artifactId>bonita-common</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.bonitasoft.engine</groupId>
			<artifactId>bonita-server</artifactId>
			<version>${project.version}</version>
		</dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>1.6.1</version>
        </dependency>
		<dependency>
			<groupId>commons-dbcp</groupId>
			<artifactId>commons-dbcp</artifactId>
			<version>1.4</version>
		</dependency>
		<dependency>
			<groupId>commons-pool</groupId>
			<artifactId>commons-pool</artifactId>
			<version>1.5.5</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<modules>
						<ejbModule>
							<groupId>org.bonitasoft.engine</groupId>
							<artifactId>bonita-deploy-ejb3</artifactId>
							<bundleDir>/</bundleDir>
						</ejbModule>
						<jarModule>
							<groupId>org.bonitasoft.engine</groupId>
							<artifactId>bonita-common</artifactId>
						</jarModule>
						<jarModule>
							<groupId>org.bonitasoft.engine</groupId>
							<artifactId>bonita-server</artifactId>
						</jarModule>
						<jarModule>
                            <groupId>org.slf4j</groupId>
                            <artifactId>slf4j-log4j12</artifactId>
						</jarModule>
						<jarModule>
							<groupId>commons-dbcp</groupId>
							<artifactId>commons-dbcp</artifactId>
						</jarModule>
						<jarModule>
							<groupId>commons-pool</groupId>
							<artifactId>commons-pool</artifactId>
						</jarModule>
					</modules>

					<generateApplicationXml>true</generateApplicationXml>
					<version>5</version>
					<displayName>Bonita Application</displayName>
					<description>Bonita Application</description>
					<defaultJavaBundleDir>lib</defaultJavaBundleDir>

					<jboss>
						<version>5</version>
						<loader-repository>org.bonitasoft.engine:archive=${project.artifactId}-${project.version}.ear</loader-repository>
					</jboss>

				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
